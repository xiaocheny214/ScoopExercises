<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ScoopLink.questionBankMapper.QuestionBankMapper">

    <resultMap id="QuestionBankMap" type="com.ScoopLink.manageQuestion.questionBank.dto.QuestionBank">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="creator_id" property="creatorId"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <!-- 插入题库 -->
    <insert id="insertQuestionBank" parameterType="com.ScoopLink.manageQuestion.questionBank.dto.QuestionBank" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO question_banks (name, description, creator_id, create_time)
        VALUES (#{name}, #{description}, #{creatorId}, #{createTime})
    </insert>

    <!-- 根据ID查询题库 -->
    <select id="selectById" parameterType="java.lang.Long" resultMap="QuestionBankMap">
        SELECT id, name, description, creator_id, create_time
        FROM question_banks
        WHERE id = #{id}
    </select>

    <!-- 查询所有题库 -->
    <select id="selectAll" resultMap="QuestionBankMap">
        SELECT id, name, description, creator_id, create_time
        FROM question_banks
        ORDER BY create_time DESC
    </select>

    <!-- 更新题库 -->
    <update id="updateQuestionBank" parameterType="com.ScoopLink.manageQuestion.questionBank.dto.QuestionBank">
        UPDATE question_banks
        SET
            name = #{name},
            description = #{description},
            creator_id = #{creatorId}
        WHERE id = #{id}
    </update>

    <!-- 根据ID删除题库 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM question_banks WHERE id = #{id}
    </delete>

    <!-- 批量删除题库 -->
    <delete id="deleteByIds">
        DELETE FROM question_banks WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>